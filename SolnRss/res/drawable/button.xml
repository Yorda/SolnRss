<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#f5f5f5" />
            <stroke
                android:width="1dp"
                android:color="#d8d8d8" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="1dp"
                android:right="10dp"
                android:bottom="1dp" />
        </shape>
    </item>
    
    <item>
        <shape>
             
            <gradient
                android:startColor="#f3f3f3"
                android:endColor="#f4f4f4"
                android:angle="270" />
                
            <!-- 
            <solid
                android:color="#f3f3f3" />
                 -->
            
            <stroke
                android:width="1dp"
                android:color="#d8d8d8" />
            <corners
                android:radius="4dp" />
            
            <padding
                android:left="10dp"
                android:top="0dp"
                android:right="10dp"
                android:bottom="0dp" />
                
            <!-- <size android:width="250dp" android:height="10dp" />-->
        </shape>
    </item>
    
</selector>